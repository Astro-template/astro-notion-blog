{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": [
      "./src/types.d.ts",
      "./node_modules/@types",
      "./node_modules/@cloudflare/workers-types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 